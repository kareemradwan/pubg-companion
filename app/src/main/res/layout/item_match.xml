<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_placement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/default_value"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_placement_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView_placement"
            android:layout_toEndOf="@id/textView_placement"
            android:layout_toRightOf="@id/textView_placement"
            android:text="@string/default_value"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_kills"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_placement_label"
            android:layout_toRightOf="@id/textView_placement_label"
            android:gravity="center"
            android:text="@string/default_value"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_kills"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_placement_label"
            android:layout_toRightOf="@id/textView_placement_label"
            android:gravity="center"
            android:text="@string/kills"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_damage"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_kills"
            android:layout_toRightOf="@id/textView_kills"
            android:gravity="center"
            android:text="@string/default_value"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_kills"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_kills"
            android:layout_toRightOf="@id/textView_kills"
            android:gravity="center"
            android:text="@string/damage"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_distance"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_damage"
            android:layout_toRightOf="@id/textView_damage"
            android:gravity="center"
            android:text="@string/default_value"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_kills"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_damage"
            android:layout_toRightOf="@id/textView_damage"
            android:gravity="center"
            android:text="@string/distance"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView_mode"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mode_squad"
            android:contentDescription="@string/game_mode" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageView_mode"
            android:gravity="center"
            android:text="@string/date"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>